{
  "name": "nest-backend-template-simplified",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "dotenvx run -f env/run/app.env -- nest start",
    "start:dev": "dotenvx run -f env/run/app.env -- nest start --watch",
    "start:dist": "node dist/main",
    "start:dist:env": "dotenvx run -f env/run/app.env -- node dist/main",
    "build": "nest build",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "compose:up": "docker compose up -d --build",
    "compose:down": "docker compose down",
    "migrations:create": "dotenvx run -f env/run/app.env -- ts-node -r tsconfig-paths/register scripts/migrations/create.ts",
    "migrations:sync": "dotenvx run -f env/run/app.env -- ts-node -r tsconfig-paths/register scripts/migrations/sync.ts",
    "migrations:up": "dotenvx run -f env/run/app.env -- ts-node -r tsconfig-paths/register scripts/migrations/up.ts",
    "migrations:down": "dotenvx run -f env/run/app.env -- ts-node -r tsconfig-paths/register scripts/migrations/down.ts"
  },
  "engines": {
    "node": ">=20.10"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.24.0",
    "@fastify/cookie": "^9.4.0",
    "@fastify/static": "^7.0.4",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-fastify": "^10.4.8",
    "@nestjs/swagger": "^8.0.7",
    "better-sqlite3": "^11.6.0",
    "fastify": "^4.28.1",
    "jose": "^5.9.6",
    "kysely": "^0.27.4",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sql-migrations-core": "^0.1.0",
    "uuidv7": "^1.0.2",
    "zod": "^3.23.8",
    "zod-openapi": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.5.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0"
  }
}
